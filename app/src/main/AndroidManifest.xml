<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_icon_notification"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_icon_notification"
        android:enableOnBackInvokedCallback="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskMenadzer"
        tools:targetApi="33">


        <activity
            android:name="com.example.taskmenadzer.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TaskMenadzer">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.taskmenadzer.TaskDetailsActivity" />
        <activity android:name="com.example.taskmenadzer.SettingsActivity" />
        <receiver
            android:name="com.example.taskmenadzer.TaskActionReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>
    </application>
</manifest>
