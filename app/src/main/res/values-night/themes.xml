<!-- res/values-night/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TaskMenadzer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Kolory Podstawowe (Primary) dla trybu ciemnego -->
        <item name="colorPrimary">@color/app_color_primary_dark</item> <!-- np. purple_200 lub inny jaśniejszy fioletowy zdefiniowany jako app_color_primary_dark -->
        <item name="colorOnPrimary">@color/app_color_on_primary_dark</item> <!-- np. czarny lub bardzo ciemny fioletowy -->
        <item name="colorPrimaryContainer">@color/app_color_primary_container_dark</item>
        <item name="colorOnPrimaryContainer">@color/app_color_on_primary_container_dark</item>
        <item name="colorPrimaryInverse">@color/app_color_primary</item> <!-- W trybie ciemnym, inverse to jasny (dzienny) Primary -->

        <!-- Kolory Drugorzędne (Secondary) dla trybu ciemnego -->
        <item name="colorSecondary">@color/app_color_secondary_dark</item> <!-- np. teal_200 lub inny jaśniejszy turkusowy -->
        <item name="colorOnSecondary">@color/app_color_on_secondary_dark</item> <!-- np. czarny -->
        <item name="colorSecondaryContainer">@color/app_color_secondary_container_dark</item>
        <item name="colorOnSecondaryContainer">@color/app_color_on_secondary_container_dark</item>

        <!-- Tertiary (opcjonalnie) -->

        <!-- Kolor Błędu (Error) dla trybu ciemnego -->
        <item name="colorError">@color/app_color_error_dark</item> <!-- Jaśniejszy czerwony -->
        <item name="colorOnError">@color/app_color_on_error_dark</item> <!-- Ciemny tekst na jasnym błędzie -->
        <item name="colorErrorContainer">@color/app_color_error_container_dark</item>
        <item name="colorOnErrorContainer">@color/app_color_on_error_container_dark</item>

        <!-- Tła i Powierzchnie (Backgrounds and Surfaces) dla trybu ciemnego -->
        <item name="android:colorBackground">@color/app_color_background_dark</item> <!-- np. Twój dark_background lub #121212 -->
        <item name="colorOnBackground">@color/app_color_on_background_dark</item> <!-- np. biały lub jasnoszary -->

        <item name="colorSurface">@color/app_color_surface_dark</item> <!-- Może być taki sam jak tło lub nieco jaśniejszy/ciemniejszy, np. #1E1E1E -->
        <item name="colorOnSurface">@color/app_color_on_surface_dark</item>
        <item name="colorSurfaceVariant">@color/app_color_surface_variant_dark</item>
        <item name="colorOnSurfaceVariant">@color/app_color_on_surface_variant_dark</item>

        <item name="colorOutline">@color/app_color_outline_dark</item>
        <item name="colorOutlineVariant">#49454F</item> <!-- Ciemniejszy wariant obramowania dla trybu ciemnego -->

        <!-- Pasek Statusu (Status bar color) -->
        <!-- W Twoim pliku było: ?attr/colorPrimaryVariant. W trybie ciemnym, colorPrimaryVariant może być ciemny (np. purple_700). -->
        <!-- Często w trybie ciemnym pasek statusu ma taki sam kolor jak tło aplikacji dla bardziej jednolitego wyglądu. -->
        <item name="android:statusBarColor" >@color/app_color_background_dark</item>
        <!-- <item name="android:windowLightStatusBar" tools:targetApi="m">false</item> --> <!-- Ikony systemowe na pasku statusu będą jasne -->

        <!-- Tło Okna (Window Background) -->
        <item name="android:windowBackground">@color/app_color_background_dark</item> <!-- Użyj zdefiniowanego koloru tła dla trybu ciemnego -->
    </style>
</resources>